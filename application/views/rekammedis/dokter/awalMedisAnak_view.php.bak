<script>
    // Toggle hubungan field
    function toggleHubungan(value) {
        const container = document.getElementById('hubunganContainer');
        container.style.display = value === 'Alloanamnesis' ? 'block' : 'none';
    }


    // (DOMContentLoaded merged with canvas initialization below)

    // Calculate BMI
    function calculateBMI() {
        const bb = parseFloat(document.querySelector('[name="bb"]').value);
        const tb = parseFloat(document.querySelector('[name="tb"]').value);

        if (bb && tb && tb > 0) {
            const tbMeter = tb / 100;
            const bmi = (bb / (tbMeter * tbMeter)).toFixed(1);
            document.getElementById('bmi').value = bmi;

            // Status gizi anak (simplified)
            let status = '';
            if (bmi < 14) status = 'Gizi Buruk';
            else if (bmi < 17) status = 'Gizi Kurang';
            else if (bmi < 25) status = 'Gizi Baik';
            else status = 'Gizi Lebih';

            document.getElementById('statusGizi').value = status;
        }
    }

    // Form submit
    document.getElementById('formAnakAssessment').addEventListener('submit', function (e) {
        e.preventDefault();

        const formData = new FormData(this);

        fetch('<?= base_url('AwalMedisAnakController/save') ?>', {
            method: 'POST',
            body: formData
        })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Berhasil!',
                        text: data.message,
                        timer: 2000
                    }).then(() => {
                        location.reload();
                    });
