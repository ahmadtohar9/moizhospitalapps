<script>
    var canvas, ctx;
    var isDrawing = false;
    var lastX = 0, lastY = 0;

    // PHP Injection for existing image
    <?php
    $clean_no_rawat = str_replace('/', '', $no_rawat);
    $saved_file = FCPATH . 'assets/images/lokalis_anak/lokalis_' . $clean_no_rawat . '.png';
    $saved_url = base_url('assets/images/lokalis_anak/lokalis_' . $clean_no_rawat . '.png');
    $has_image = file_exists($saved_file) ? 'true' : 'false';
    ?>
    var existingImageURL = <?= $has_image == 'true' ? "'$saved_url?t=" . time() . "'" : "''" ?>;
    var backgroundURL = '<?= base_url("assets/images/human_body_anatomy_anak.png") ?>';

    // 1. Clock Logic
    $(document).ready(function () {
        // Init Canvas
        initCanvas();

        // Check isEditMode?
        const isEdit = "<?= isset($asesment['tanggal']) ? 'true' : 'false' ?>";
        if (isEdit === 'false') {
            let clockInterval = setInterval(() => {
                const now = new Date();
                const h = String(now.getHours()).padStart(2, '0');
                const m = String(now.getMinutes()).padStart(2, '0');
                if ($('#ortho_jam').length) {
                    $('#ortho_jam').val(`${h}:${m}`);
                }
            }, 1000);

            $('#ortho_jam').on('input change', function () { clearInterval(clockInterval); });
        }
    });

    // 2. Canvas Functions
    function initCanvas() {
        canvas = document.getElementById('anakCanvas');
        ctx = canvas.getContext('2d');

        // Load Image
        var img = new Image();
        img.onload = function () {
            ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
        };
        img.src = existingImageURL ? existingImageURL : backgroundURL;

        // Events
        canvas.addEventListener('mousedown', startDrawing);
        canvas.addEventListener('mousemove', draw);
        canvas.addEventListener('mouseup', stopDrawing);
        canvas.addEventListener('mouseout', stopDrawing);
    }

    function startDrawing(e) {
        isDrawing = true;
        [lastX, lastY] = [e.offsetX, e.offsetY];
    }
    function draw(e) {
        if (!isDrawing) return;
        ctx.beginPath();
        ctx.moveTo(lastX, lastY);
        ctx.lineTo(e.offsetX, e.offsetY);
        ctx.stroke();
        [lastX, lastY] = [e.offsetX, e.offsetY];
    }
    function stopDrawing() { isDrawing = false; }

    function setBrushColor(color) {
        ctx.strokeStyle = color;
        ctx.lineWidth = 2;
    }

    function clearCanvas() {
        var img = new Image();
        img.onload = function () {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
        };
        img.src = backgroundURL;
    }

    function saveCanvasToInput() {
        var data = canvas.toDataURL('image/png');
        $('#ortho_lokalis_image').val(data);
    }

    // 3. Save Logic
    function simpanOrtho() {
        saveCanvasToInput();

        $.ajax({
            url: "<?= base_url('AwalMedisAnakController/save') ?>",
            type: "POST",
            data: $('#formAwalMedisAnak').serialize(),
            dataType: "json",
            beforeSend: function () {
                Swal.fire({ title: 'Menyimpan...', showConfirmButton: false, willOpen: () => Swal.showLoading() });
            },
            success: function (res) {
                if (res.status == 'success') {
                    Swal.fire({ icon: 'success', title: 'Berhasil', text: res.message, timer: 1500, showConfirmButton: false })
                        .then(() => { updateHistoryUI(); });
                } else {
                    Swal.fire('Gagal', res.message, 'error');
                }
            },
            error: function (err) {
                Swal.fire('Error', 'Terjadi kesalahan sistem.', 'error');
                console.log(err);
            }
        });
    }

    function updateHistoryUI() {
        $('#box-history-ortho').show();
        var tgl = $('input[name="tanggal"]').val();
        var jam = $('input[name="jam"]').val();
        var anam = $('select[name="anamnesis"]').val();
        var diag = $('textarea[name="diagnosis"]').val();

        // Format Date
        if (tgl) {
            var p = tgl.split('-');
            if (p.length == 3) tgl = p[2] + '-' + p[1] + '-' + p[0];
        }

        $('#ortho_hist_tanggal').text(tgl + ' ' + jam);
        $('#ortho_hist_anamnesis').text(anam);
        $('#ortho_hist_diagnosa').text(diag.length > 50 ? diag.substring(0, 50) + '...' : diag);
    }

    function hapusOrtho() {
        Swal.fire({
            title: 'Hapus Asesmen?',
            text: "Data akan hilang permanen!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            confirmButtonText: 'Ya, Hapus!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post("<?= base_url('AwalMedisAnakController/delete') ?>",
                    { no_rawat: $('#ortho_no_rawat').val() },
                    function (res) {
                        if (res.status == 'success') {
                            Swal.fire('Terhapus', res.message, 'success').then(() => {
                                $('#formAwalMedisAnak')[0].reset();
                                clearCanvas();
                                $('#box-history-ortho').hide();
                            });
                        } else {
                            Swal.fire('Gagal', res.message, 'error');
                        }
                    }, 'json'
                );
            }
        });
    }

    function cetakPdfOrtho() {
        var nr = $('#ortho_no_rawat').val();
        if (!nr) return;
        window.open('<?= base_url("AwalMedisAnakController/print_pdf?no_rawat=") ?>' + nr, '_blank');
    }

