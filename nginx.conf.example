# Nginx Configuration for MOIZ Hospital Apps (CodeIgniter)
# Place this in your site config or include it

server {
    listen 80;
    server_name yourdomain.com www.yourdomain.com;
    
    # Document root
    root /www/wwwroot/moizhospitalapps;
    index index.php index.html index.htm;
    
    # Charset
    charset utf-8;
    
    # Logging
    access_log /www/wwwlogs/moizhospitalapps.access.log;
    error_log /www/wwwlogs/moizhospitalapps.error.log;
    
    # Main location
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP processing
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_pass unix:/tmp/php-cgi-74.sock;  # Adjust PHP version if needed
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # PHP settings
        fastcgi_read_timeout 300;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
    }
    
    # Deny access to sensitive directories
    location ~ ^/(application|system|database)/ {
        deny all;
        return 404;
    }
    
    # Deny access to .htaccess and other hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Allow assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Disable directory listing
    autoindex off;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Client body size (for uploads)
    client_max_body_size 100M;
}

